@model Models.Views.ContattiView

@{
ViewData["Title"] = "Creazione Contatti";
}

<div class="container-fluid">
    <div class="row">
        <div class="col col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong> @ViewData["Title"]</strong>
                </div>
                <div class="card-body card-block">
                    <form asp-action="Create" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Valore" class="control-label"></label>
                            <input asp-for="Valore" class="form-control" />
                            <span asp-validation-for="Valore" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note" class="control-label"></label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnagraficaId" class="control-label"></label>
                            <select asp-for="AnagraficaId" class="form-control" asp-items="ViewBag.AnagraficaId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoContattoId" class="control-label"></label>
                            <select asp-for="TipoContattoId" class="form-control" asp-items="ViewBag.TipoContattoId"></select>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Index" class="btn btn-danger"><i class="fa fa-caret-square-o-left"></i> Indietro</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Salva</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}