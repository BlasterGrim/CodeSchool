@model IEnumerable<Models.Tabelle.Anagrafica>
@{ 
    ViewData["Title"] = "Index"; 
}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title-5 m-b-35">tabella anagrafica</h3>                    
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2" name="property">
                                    <option selected="selected">All Properties</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option selected="selected">Today</option>
                                    <option value="">3 Days</option>
                                    <option value="">1 Week</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter">
                                <i class="zmdi zmdi-filter-list"></i>filters</button>
                        </div>
                        <div class="table-data__tool-right">
                            <a asp-action="Create" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>Nuova</a>
                            <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                <select class="js-select2" name="type">
                                    <option selected="selected">Export</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CodiceAnagrafica)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsAzienda)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cognome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RagioneSociale)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PartitaIva)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CodiceFiscale)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TipoAnagrafica)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodiceAnagrafica)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsAzienda)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cognome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RagioneSociale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartitaIva)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodiceFiscale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoAnagrafica.Descrizione)
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a asp-action="Edit" asp-route-id="@item.AnagraficaId" class="item" data-toggle="tooltip" data-placement="top" title="Modifica">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.AnagraficaId" class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                <i class="zmdi zmdi-more"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.AnagraficaId" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="zmdi zmdi-delete"></i>
                                            </a>
                                        </div>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
        </div>
    </div>