@model IEnumerable<Models.Views.IndirizziView>

    @{
    ViewData["Title"] = "Indirizzi";
    }

    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title-5 m-b-35">Tabella Indirizzi</h3>
                    <div class="table-data__tool">
                        <!--div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2" name="property">
                                    <option selected="selected">All Properties</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option selected="selected">Today</option>
                                    <option value="">3 Days</option>
                                    <option value="">1 Week</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter">
                                <i class="zmdi zmdi-filter-list"></i>filters</button>
                        </div-->
                        <div class="table-data__tool-right">
                            <a asp-action="Create" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>Nuova</a>
                            <!--div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                <select class="js-select2" name="type">
                                    <option selected="selected">Export</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div-->
                        </div>
                    </div>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nazione)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Regione)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Provincia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Citta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Denominazione)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cap)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Numero)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Anagrafica)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TipoIndirizzo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nazione)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Regione)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provincia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Citta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Denominazione)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cap)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Anagrafica.CodiceFiscale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoIndirizzo.Descrizione)
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a asp-action="Edit" asp-route-id="@item.IndirizziId" class="item"
                                                data-toggle="tooltip" data-placement="top" title="Modifica">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IndirizziId" class="item"
                                                data-toggle="tooltip" data-placement="top" title="Dettagli">
                                                <i class="zmdi zmdi-more"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IndirizziId" class="item"
                                                data-toggle="tooltip" data-placement="top" title="Elimina">
                                                <i class="zmdi zmdi-delete"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>